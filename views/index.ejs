<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    </head>
    <body>
        <div class="container text-center">
            <h1>ToDoアプリ</h1>
            <div class="container" style="margin-top: 32px; margin-bottom: 32px;">
                <form action="/tasks" method="post">
                    <div class="form-group">
                        <input type="text" name="todo_text" class="form-control" placeholder="タスクを入力...">
                    </div>
                    <input type="submit" class="btn btn-primary" value="追加する" />
                </form>
            </div>
            <div class="container">
                <table class="table table-striped table-sm text-center">
                    <thead>
                    <tr class="table-primary">
                        <th scope="col">#</th>
                        <th scope="col">タスク名</th>
                        <th scope="col">ステータス</th>
                        <th scope="col"></th>
                    </tr>
                    </thead>
                    <tbody>
                    <% tasks.forEach(function (v,k) { %>
                        <tr>
                            <th class="align-middle" scope="row"><%= k %></th>
                            <td class="align-middle"><%= v.text %></td>
                            <td class="align-middle"><%= v.done %></td>
                            <td class="align-middle">
                                <form action='/<%=  k %>/done' method="post">
                                    <input type="submit" class="btn <% if (v.done) { %>btn-secondary<% } else { %>btn-success<% } %>" value="完了する" />
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </body>
</html>